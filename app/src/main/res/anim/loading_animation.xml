<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="500"
        android:fromXScale="0"
        android:toXScale="4"
        android:fromYScale="0"
        android:toYScale="4"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="infinite"
        android:fillAfter="true"/>
    <alpha
        android:duration="500"
        android:fromAlpha="1"
        android:toAlpha="0"
        android:repeatCount="infinite"
        android:fillAfter="true"/>
</set>